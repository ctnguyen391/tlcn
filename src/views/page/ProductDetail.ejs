<div class="ps-page ps-page--product-detail">
    <div class="container">
      <div class="ps-page__header">
        <ul class="ps-breadcrumb">
          <li><a href="index.html">Home</a></li>
          <li><%= product.title %></li>
        </ul>
        <div class="ps-page__nav">
          <button><i class="icon-chevron-left"></i></button>
          <button><i class="icon-chevron-right"></i></button>
        </div>
      </div>
      <div class="ps-product--detail ps-product--video">
        <div class="ps-product__header">
          <div class="ps-product__thumbnail" data-vertical="false">
            <% const images = product.images.split(",")%> 
            <figure>
              <div class="ps-wrapper">
                <div class="ps-product__gallery" data-arrow="true">
                  <% images.forEach(item => { %>
                    <div class="item"><a href="<%= item %>"><img src="<%= item %>" alt=""></a></div>
                  <% }) %>
                </div>
              </div>
            </figure>
            <div class="ps-product__variants" data-item="4" data-md="3" data-sm="3" data-arrow="false">
              <% images.forEach(item => { %>
                <div class="item"><img src="<%= item %>" alt=""></div>
              <% }) %>
            </div>
          </div>
          <div class="ps-product__info">
            <div class="ps-product__info-header">
              <div class="ps-product__rating">
                <select class="ps-rating" data-read-only="true">
                  <% for( let index=0; index < product.rate; index++ ) { %>
                    <option value="1">
                      <%= index %>
                    </option>
                    <% } %>
                </select><span></span>
              </div>
              <h2 class="ps-product__title"><%= product.title %></h2><span class="ps-product__sku">SKU: AB1609456789</span>
              <h4 class="ps-product__price out-stock">  <%= product.price.toLocaleString('it-IT', { style: 'currency' , currency: 'VND' }) %></h4>
            </div>
            <div class="ps-product__desc">
              <p><%- product.description %></p>
            </div>
            <div class="ps-product__shopping">
              <figure>
                <div class="form-group--number">
                  <button class="up"></button>
                  <button class="down"></button>
                  <input value="1" id="product-qty" class="form-control" type="text" placeholder="1">
                 </div><a class="ps-btn ps-btn--black add-cart" data-product="<%= JSON.stringify(product) %>" href="#">Thêm vào giỏ</a><a class="ps-product__favorite" href="#"><i class="fa fa-heart-o"></i></a>
              </figure>
              <div class="ps-product__buynow"><a class="ps-btn ps-btn--black ps-btn--fullwidth add-cart" data-redirect="1" data-product="<%= JSON.stringify(product) %>" href="#">Mua ngay</a></div>
            </div>
            <div class="ps-product__specification">
              <p><strong>Danh mục:</strong><a href="#"><%= product.name %></a></p>
            </div>
            <div class="ps-product__sharing"><a href="#"><i class="fa fa-facebook"></i></a><a href="#"><i class="fa fa-twitter"></i></a><a href="#"><i class="fa fa-pinterest"></i></a></div>
          </div>
        </div>
        <div class="ps-product__content ps-tab-root">
          <div class="container">
            <ul class="ps-tab-list">
              <li class="active"><a href="#tab-1">Mô tả</a></li>
            </ul>
            <div class="ps-tabs">
              <div class="ps-tab active" id="tab-1">
                <div class="row">
                  <div class="col-xl-7 col-lg-6 col-md-12 col-sm-12 col-12 ">
                    <div class="ps-document">
                      <%- product.content %> 
                    </div>
                  </div>
                  <div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 col-12 "><img src="/page/img/product/content/content-video.jpg" alt="">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="ps-related-products">
    <h3>Sản phẩm tương tự</h3>
    <div class="container">
      <div class="row">
        <% products.forEach(element=> { %>
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 ">
          <div class="ps-product">
            <div class="ps-product__thumbnail"><img class="ps-product__image" style="width: 270px; height: 270px" src="<%= element.thumbnail %>" alt="" /><img
                class="ps-product__image-alt" href="/san-pham/<%= element.id %>"></a>
              <div class="ps-product__actions">
                <a class="add-cart" data-product="<%= JSON.stringify(element) %>"> THÊM VÀO GIỎ</a>
              </div>
            </div>
            <div class="ps-product__content"><a class="ps-product__title" href="/san-pham/<%= element.id %>"><%= element.title %></a>
              <select class="ps-rating" data-read-only="true">
                <% for( let index=0; index < element.rate; index++ ) { %>
                  <option value="1">
                    <%= index %>
                  </option>
                  <% } %>
              </select>
            </div>
            <p class="ps-product__price">
              <%= element.price.toLocaleString('it-IT', { style: 'currency' , currency: 'VND' }) %>
            </p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>