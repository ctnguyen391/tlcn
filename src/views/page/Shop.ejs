<div class="ps-page">
  <div class="ps-shop">
    <div class="container">
      <div class="ps-shop__header">
        <div class="ps-shop__left">
          <h1>Shop</h1>
          <ul class="ps-breadcrumb">
            <li><a href="#">Home</a></li>
            <li>Shop</li>
          </ul>
        </div>
      </div>
      <div class="ps-shop__filter-panel"></div>
      <div class="ps-shop__content">
        <div class="row">
          <% products.forEach(element=> { %>
            <div class="col-xl-3 col-lg-4 col-md-3 col-sm-6 col-6 ">
              <div class="ps-product">
                <div class="ps-product__thumbnail"><img style="width: 270px; height: 270px" class="ps-product__image"
                    src="<%= element.thumbnail %>" alt="" /><img class="ps-product__image-alt"
                    href="/san-pham/<%= element.id %>"></a>
                  <div class="ps-product__actions">
                    <a class="add-cart" data-product="<%= JSON.stringify(element) %>"> THÊM VÀO GIỎ</a>
                  </div>
                </div>
                <div class="ps-product__content"><a class="ps-product__title" href="/san-pham/<%= element.id %>"><%= element.title %></a>
                  <select class="ps-rating" data-read-only="true">
                    <% for( let index=0; index < element.rate; index++ ) { %>
                      <option value="1">
                        <%= index %>
                      </option>
                      <% } %>

                  </select>
                </div>
                <p class="ps-product__price">
                  <%= element.price.toLocaleString('it-IT', { style: 'currency' , currency: 'VND' }) %>
                </p>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>
    <div class="ps-shop__footer">
      <ul class="pagination justify-content-center mb-0">
        <% for (i=1; i <=total; i ++) { %>
          <% if(curentPage==i) { %>
            <li class="page-item active">
              <% if (q !='' ) { %>
                <a class="page-link"
                  href="/cua-hang/tim-kiem?q=<%= q.replace(/%/g,'') %>&page=<%= i %>">
                  <%= i %>
                </a>
                <% } else { %>
                  <a class="page-link" href="/cua-hang/tim-kiem?page=<%= i %>">
                    <%= i %>
                  </a>
                  <% } %>

            </li>
            <%} else { %>
              <li class="page-item">

                <% if (q !='') { %>
                  <a class="page-link"
                    href="/cua-hang/tim-kiem?q=<%= q.replace(/%/g,'') %>&page=<%= i %>">
                    <%= i %>
                  </a>
                  <% } else { %>
                    <a class="page-link" href="/cua-hang/tim-kiem?page=<%= i %>">
                      <%= i %>
                    </a>
                    <% } %>
              </li>
              <%} %>
                <% } %>
      </ul>
    </div>
  </div>
</div>